<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="App Test Suite" thread-count="3" parallel="tests" verbose="4">

	<test name="Amazon Test">
	<parameter name ="url"  value="https://www.amazon.in/" />
	<parameter name ="browser"  value="chrome" />
		<classes>
			<class name="TestCasessample.AmazonTest" />
		</classes>
	</test>

	<test name="Freshworks Test">
	<parameter name ="url"  value="https://www.freshworks.com/" />
	<parameter name ="browser"  value="firefox" />
		<classes>
			<class name="TestCasessample.FreshworksTest" />
		</classes>
	</test>

	<test name="Google Test">
	<parameter name ="url"  value="https://www.Google.com/" />
	<parameter name ="browser"  value="edge" />
		<classes>
			<class name="TestCasessample.GoogleTest" />
		</classes>
	</test>

</suite>